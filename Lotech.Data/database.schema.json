{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Lotech.Data database.json sechema",
  "type": "object",
  "properties": {
    "dbProviderFactories": {
      "type": "object",
      "description": "DbProviderFactory 注册, 如：\"System.Data.SqlClient\": \"System.Data.SqlClient.SqlClientFactory, System.Data.SqlClient\"",
      "patternProperties": {
        ".*": {
          "type": "string",
          "description": "DbProviderFactory的完整类型名称，如：System.Data.SqlClient.SqlClientFactory, System.Data.SqlClient"
        }
      }
    },
    "connectionStrings": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9\\-_]+$": {
          "type": "object",
          "description": "库连接定义名",
          "required": [ "connectionString", "providerName" ],
          "properties": {
            "providerName": {
              "type": "string",
              "description": "引用的DbProviderFactory名，在 dbProviderFactories 节中注册"
            },
            "connectionString": {
              "type": "string",
              "description": "数据库连接字符串，如：Data Source=.; User Id=sa; Password=123456;"
            },
            "parameterPrefix": {
              "type": "string",
              "description": "仅在 type 指定为 Generic 时需要, 在SQL语句中构建参数名的部分，如SqlServer 为 @，用于构建如 SELECT * FROM table WHERE id = @p_sql_0"
            },
            "quoteName": {
              "type": "string",
              "description": "仅在 type 指定为 Generic 时需要, 用于将引用名称时替换字符串\n名称占位符为 {0}，可使用 U或L进行大小写转换，如 {0:U}生成大写的名称\n 如 SqlServer \n为 “[{0}]”, 用于构建如 SELECT * FROM [table] WHERE [id] = @p_sql_0"
            },
            "type": {
              "type": "string",
              "description": "当前库类型",
              "enum": [
                "Default",
                "Generic",
                "SqlServer",
                "Oracle",
                "MySql",
                "SQLite"
              ]
            }
          }
        }
      }
    },
    "databaseSettings": {
      "type": "object",
      "description": "库设置",
      "required": [ "defaultDatabase" ],
      "properties": {
        "defaultDatabase": {
          "type": "string",
          "description": "默认库连接名"
        }
      }
    }
  }
}