<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <DocumentationFile>bin\Debug\MySql\Lotech.Data.xml</DocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>2.0.2</Version>
    <PackageId>Lotech.Data.MySql.Core</PackageId>
    <Authors>cnsicau</Authors>
    <Company>lotech</Company>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>key.snk</AssemblyOriginatorKeyFile>
    <PackageProjectUrl>https://github.com/cnsicau/Lotech.Data.Core</PackageProjectUrl>
    <Description>an ORM like "EnterpriseLib Data Block" for dotnet - MySql</Description>
    <AssemblyVersion>2.0.2.523</AssemblyVersion>
    <AssemblyName>Lotech.Data.MySql</AssemblyName>
    <RootNamespace>Lotech.Data</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>bin\Debug\MySql</OutputPath>
    <DefineConstants>TRACE;DEBUG;MYSQL</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>TRACE;MYSQL</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Properties\**" />
    <Compile Remove="Generics\**" />
    <Compile Remove="SqlServers\**" />
    <Compile Remove="Oracles\**" />
    <Compile Remove="SQLites\**" />
    <Compile Remove="GenericDatabase.cs" />
    <Compile Remove="SqlServerDatabase.cs" />
    <Compile Remove="OracleDatabase.cs" />
    <Compile Remove="SQLiteDatabase.cs" />
    <Content Include="database.xml" />
  </ItemGroup>
</Project>
