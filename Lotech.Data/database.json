{
  "$schema": "database.schema.json",
  "dbProviderFactories": {
    "System.Data.SqlClient": "System.Data.SqlClient.SqlClientFactory, System.Data.SqlClient",
    "System.Data.OracleClient": "Oracle.ManagedDataAccess.Client.OracleClientFactory, Oracle.ManagedDataAccess.Client"
  },

  "connectionStrings": {
    "connection": {
      "providerName": "System.Data.SqlClient",
      "connectionString": "Data Source=.; User Id=sa; Password=123456;",
      "type": "SqlServer"
    },
    "generic": {
      "providerName": "System.Data.OracleClient",
      "connectionString": "Data Source=localhost/orcl; User Id=orcl; Password=orcl;",
      "type": "Generic",
      "parameterPrefix": ":",
      "quoteName": "\"{0:U}\""
    }
  },

  "databaseSettings": {
    "defaultDatabase": "connection"
  }
}